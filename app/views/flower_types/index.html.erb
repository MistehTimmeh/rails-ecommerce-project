<% content_for(:html_title) {"All Flower Types: "}%>

<div class="columns is-multiline">
    <% @types.each do |t| %>
    <div class="column is-one-quarter">
        <div>
        <%= link_to t.type_name, t %>
        </div>
    </div>
    <% end %>
</div>
<div class="container is-flex is-justify-content-center">
    <%= paginate @types %>
</div>