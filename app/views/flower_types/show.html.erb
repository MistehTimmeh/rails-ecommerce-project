<% content_for(:html_title) {raw @type.type_name} %>
<br>

<div class="columns is-multiline">
    <% @type.products.each do |p| %>
        <div class="column is-one-quarter">
            <div>
                <%= link_to "#{p.flower_colour.colour_name} #{p.flower_type.type_name}".titleize, p %>
                <br>
                <% if p.image.present? %>
                    <%= link_to (image_tag p.image, :style => "height: 50%; width: 50%;"), p %>
                <% end %>
                <p>Price: <%= number_to_currency(p.price_cents) %></p>
            </div>
        </div>
    <% end %>
</div>

<a href="/products"><b>Return to all products</b></a>